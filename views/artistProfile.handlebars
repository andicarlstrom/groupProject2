    {{!-- Photos Container that will hold all of the photos posted by the tattoo artist --}}
    <div class="photosContainer">
        {{#if photos}}

        {{#each photos}}
        <img src="{{ this }}" alt="Tattoo Image" data-target="{{ @index }}" class="tattooArtistsUploadedImages modal-trigger">
        {{!-- tattoo image modal that displays the tattoo details on click --}}
        <div class="modal" id="{{ @index }}">
            <div class="modal-content">
                <p>TESTING TO SEE IF THIS IS A UNIQUE MODAL {{ @index }}</p>
                <img class="tattooImageInModal" src="{{ this }}" alt="">
            </div>
        </div>

