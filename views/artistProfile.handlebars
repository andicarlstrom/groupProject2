{{!-- Container that holds the tattoo artists information --}}
<div class="container">
    <div class="row">
        <div class="col s12 m6 l7">
            <div class="tattooArtistDetails">
                <h2>{{ firstName }} {{ lastName }}</h2>

                <p>{{ location }} {{ city }} {{ state }} {{ zip }}</p>
                <p>{{ specialization }} </p>
                <p>{{ pricing }} </p>

