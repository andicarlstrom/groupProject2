{{!-- main page content --}}
<div class="container">
  <div class="row">
    <div class="col s12" id="newCustomerSection">
      <h5>New Users</h5>
      {{!-- button for new customer --}}
      <p><button data-target="createAccountModal" class="btn modal-trigger" id="newUserBtn">Create Account</button></p>
    </div>
  </div>

  <div class="divider"></div>

  {{!-- existing user section --}}
  <div class="row">
    <h5>Existing Users</h5>
    {{!-- form input section and submit button --}}
    <form class="col s12 offset-m2">
      <div class="row">
        <div class="input-field col s12 m8">
          <input id="loginEmail" type="text" class="validate" required="" aria-required="true">
          <label for="loginEmail">Email</label>
          <span class="helper-text" data-error="Required"></span>
        </div>
      </div>
      <div class="row">
        <div class="input-field inline col s6 m8 l6">
          <input id="loginPassword" type="password" class="validate" required="" aria-required="true">
          <label for="loginPassword">Password</label>
          <span class="helper-text" data-error="Required"></span>
        </div>
        <div class="input-field inline col s6 m4">
          <label>
            <input type="checkbox" id="showPassword" class="filled-in" name="show" />
            <span>Show</span>
          </label>
        </div>
      </div>
      <button class="btn waves-effect waves-light" type="submit" id="loginSubmit" name="action">Login</button>
    </form>
  </div>
</div>

{{!-- modal for new account creation --}}
<div id="createAccountModal" class="modal">
  <div class="modal-content">
    <h4 class="modalHeader">Create New Account</h4>
  <div class="row" id="custSelectTypeSection">
    {{!-- determines which forms shows --}}
    <div class="input-field col s12">
      <select id="userType">
        <option value="" disabled selected>What Best Describes You?</option>
        <option value="customer">Customer</option>
        <option value="artist">Tattoo Artist</option>
      </select>
    </div>
  </div>

  {{!-- this form is for all users to create an account --}}
  <form id="allUsersInfo">
    <h6>All fields are required</h6>
      <div class="row">
        <div class="input-field col s12 m6">
          <input id="firstNameCreate" type="text" class="validate" required="" aria-required="true">
          <label for="firstNameCreate">First Name</label>
          <span class="helper-text" data-error="Required"></span>
        </div>
        <div class="input-field col s12 m6">
          <input id="lastNameCreate" type="text" class="validate" required="" aria-required="true">
          <label for="lastNameCreate">Last Name</label>
          <span class="helper-text" data-error="Required"></span>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12 m6">
          <input id="phoneNumberCreate" type="text" class="validate" required="" aria-required="true">
          <label for="phoneNumberCreate">Phone Number</label>
          <span class="helper-text" data-error="Required" data-success="right">XXX-XXX-XXXX</span>
          <span class="helper-text" data-error="Required"></span>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12 m6">
          <input id="emailCreate" type="email" class="validate" required="" aria-required="true">
          <label for="emailCreate">Email</label>
          <span class="helper-text" data-error="Required">This will also be your user name</span>
        </div>
        <div class="input-field col s12 m6">
          <input id="passwordCreate" type="text" class="validate" required="" aria-required="true">
          <label for="passwordCreate">Password</label>
          <span class="helper-text" data-error="Required">8 characters, at least 1 number</span>
        </div>
      </div>
    </form>
    {{!-- form that contains all info for an artist account --}}
    <form id="artistOnlyInfo">
      <div class="row">
        <div class="input-field col s12 m6">
          <input id="locationNameCreate" type="text" class="validate" required="" aria-required="true">
          <label for="locationNameCreate">Location Name</label>
          <span class="helper-text" data-error="Required"></span>
        </div>
        <div class="row">
          <div class="input-field col s12 m6">
            <input id="streetCreate" type="text" class="validate" required="" aria-required="true">
            <label for="streetCreate">Street</label>
            <span class="helper-text" data-error="Required"></span>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6">
            <input id="cityCreate" type="text" class="validate" required="" aria-required="true">
            <label for="cityCreate">City</label>
            <span class="helper-text" data-error="Required"></span>
          </div>
          <div class="input-field col s3 m2">
            <input id="stateCreate" type="text" class="validate" required="" aria-required="true">
            <label for="stateCreate">State</label>
            <span class="helper-text" data-error="Required"></span>
          </div>
          <div class="input-field col s3 m2">
            <input id="zipCreate" type="number" class="validate" required="" aria-required="true">
            <label for="zipCreate">Zip</label>
            <span class="helper-text" data-error="Required"></span>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12 m6">
            <select id="specializationCreate">
              <option value="" disabled selected>Choose one...</option>
              <option value="Abstract">Abstract</option>
              <option value="Ambigram">Ambigram</option>
              <option value="American Traditional">American Traditional</option>
              <option value="Anatomical">Anatomical</option>
              <option value="Biomechanical">Biomechanical</option>
              <option value="Black And Grey">Black and Grey</option>
              <option value="Blackout">Blackout</option>
              <option value="Blackwork">Blackwork</option>
              <option value="Blast Over">Blast Over</option>
              <option value="Botanical">Botanical</option>
              <option value="Broken Glass">Broken Glass</option>
              <option value="Paint Brush Stroke">Paint Brush Stroke</option>
              <option value="Celtic">Celtic</option>
              <option value="Chicano">Chicano</option>
              <option value="Dotwork">Dotwork</option>
              <option value="Geometric">Geometric</option>
              <option value="Glitch">Glitch</option>
              <option value="Glow In The Dark">Glow in the Dark</option>
              <option value="UV Ink">UV Ink</option>
              <option value="Gradient">Gradient</option>
              <option value="Graffiti">Graffiti</option>
              <option value="Hyper Realistic">Hyper Realistic</option>
              <option value="Inverted">Inverted</option>
              <option value="Japanese">Japanese</option>
              <option value="Lettering">Lettering</option>
              <option value="Line">Line</option>
              <option value="Mambo/Destrutturato">Mambo/Destrutturato</option>
              <option value="Mandala">Mandala</option>
              <option value="Mayan">Mayan</option>
              <option value="Minimalist">Minimalist</option>
              <option value="Negative Space">Negative Space</option>
              <option value="Neo Traditional">Neo Traditional</option>
              <option value="New School">New School</option>
              <option value="Norse">Norse</option>
              <option value="Traditional">Traditional</option>
              <option value="Tribal">Tribal</option>
              <option value="Optical Illusion">Optical Illusion</option>
              <option value="Outline">Outline</option>
              <option value="Pinstripe">Pinstripe</option>
              <option value="Pixel">Pixel</option>
              <option value="Pointillism">Pointillism</option>
              <option value="Pop Art">Pop Art</option>
              <option value="Portrait">Portrait</option>
              <option value="Quote/Word">Quote/Word</option>
              <option value="Realism">Realism</option>
              <option value="Silhouette">Silhouette</option>
              <option value="Sketch">Sketch</option>
              <option value="Stained Glass">Stained Glass</option>
              <option value="Surrealism">Surrealism</option>
              <option value="Torn/Ripped Skin">Torn/Ripped Skin</option>
              <option value="Trash Polka">Trash Polka</option>
              <option value="Polynesian">Polynesian</option>
              <option value="Maori">Maori</option>
              <option value="Hawaiian">Hawaiian</option>
              <option value="Watercolor">Watercolor</option>
              <option value="White Ink">White Ink</option>
              <option value="Wood Carving">Wood Carving</option>
            </select>
            <label for="specializationCreate">What is your Specialization?</label>
          </div>
          <div class="input-field col s12 m6">
            <select id="pricingCreate" required="">
              <option value="0" disabled selected>Choose one...</option>
              <option value="Per Hour">Per Hour</option>
              <option value="By Piece">By Piece</option>
            </select>
            <label for="pricingCreate">What is your Pricing Structure?</label>
          </div>
        </div>
    </form>
  </div>

  <div class="modal-footer">
    <button class="btn waves-effect waves-light" type="submit" id="createAcctSubmit" name="action">Create Account</button>
    <a href="/" class="modal-close waves-effect waves-green btn-flat" id="createAcctCancel">Cancel</a>
  </div>
</div>

{{!-- modal for blank fields --}}
<div id="errRequiredModal" class="modal">
  <div class="modal-content">
    <h4>Oops</h4>
    <p>All fields are required, please fill in the empty field(s)</p>
  </div>
</div>

{{!-- modal for invalid email address entered --}}
<div id="duplicateEmailModal" class="modal">
  <div class="modal-content">
    <h4>Oops</h4>
    <p>It looks like the email you've entered is already in use. Please enter another.</p>
  </div>
</div>